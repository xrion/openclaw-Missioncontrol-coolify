# ===================================================
# OpenClaw Mission Control — Environment Configuration
# ===================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# MINIMUM REQUIRED: Just set KIMI_API_KEY to get started!
# Everything else has sensible defaults.
# ===================================================

# ---------------------------------------------------
# REQUIRED: AI Model API Key (Kimi K2.5 — default model)
# ---------------------------------------------------
# Get your key from https://platform.moonshot.cn
KIMI_API_KEY=

# ---------------------------------------------------
# OPTIONAL: Additional AI Provider Keys
# ---------------------------------------------------
# OpenAI Codex / GPT
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Google Gemini / AI Studio
GEMINI_API_KEY=

# MiniMax
MINIMAX_API_KEY=

# OpenCode AI
OPENCODE_API_KEY=

# ---------------------------------------------------
# Mission Control Settings
# ---------------------------------------------------
# Convex Cloud — enables real-time sync (optional, works without it in demo mode)
# Get your URL from https://dashboard.convex.dev
CONVEX_URL=
CONVEX_DEPLOY_KEY=

# ---------------------------------------------------
# Host Ports (for multi-instance, change these)
# ---------------------------------------------------
# Each instance on the same server needs unique host ports.
# Container-internal ports are fixed and don't need changing.
#
# Instance 1 (default):  OPENCLAW_HOST_PORT=18789  MC_HOST_PORT=3000
# Instance 2 (example):  OPENCLAW_HOST_PORT=18800  MC_HOST_PORT=3001
OPENCLAW_HOST_PORT=18789
MC_HOST_PORT=3000

# ---------------------------------------------------
# OpenClaw Gateway
# ---------------------------------------------------
OPENCLAW_BETA=false

# ---------------------------------------------------
# Optional Integrations
# ---------------------------------------------------
GOOGLE_MAPS_API_KEY=
NANOBANANA_API_KEY=
ELEVENLABS_API_KEY=
TELEGRAM_BOT_TOKEN=

# ---------------------------------------------------
# Deployment (Coolify / Cloud)
# ---------------------------------------------------
# These are auto-set by Coolify. For local docker-compose, leave empty.
# SERVICE_FQDN_OPENCLAW=your-domain.example.com
# SERVICE_BASE64_REGISTRY=<auto-generated>
# SERVICE_BASE64_SEARXNG=<auto-generated>

# Public Access (Cloudflare Tunnel — optional)
CF_TUNNEL_TOKEN=

# Vercel deployment (optional)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Git Operations (GitHub — optional)
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_EMAIL=

# ---------------------------------------------------
# Advanced
# ---------------------------------------------------
NODE_ENV=production
SANDBOX_CONTAINER=false
